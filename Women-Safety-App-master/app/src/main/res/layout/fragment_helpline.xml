<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call For Help"
        android:fontFamily="@font/bold"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In case of an emergency, call an appropriate number for help"
        android:textSize="14dp"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/helplineNational"
                android:layout_width="380dp"
                android:layout_height="110dp"
                app:cardCornerRadius="25dp"
                android:outlineSpotShadowColor="#F1F8F2"
                android:backgroundTint="#EEF8F0">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/helplinecall"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="112"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:layout_marginLeft="100dp"
                        android:textSize="18sp"
                        android:layout_marginTop="40dp"
                        android:textColor="#36983A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="National Helpline"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:layout_marginLeft="100dp"
                        android:textSize="16sp"
                        android:layout_marginTop="60dp"
                        android:textColor="#36983A"/>

                    <ImageView
                        android:id="@+id/img112"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/telephone"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="25dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:id="@+id/helplineAmbulance"
                android:layout_width="380dp"
                android:layout_height="110dp"
                app:cardCornerRadius="25dp"
                android:outlineSpotShadowColor="#EFF8FD"
                android:backgroundTint="#EFF8FD">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ambulance"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:layout_marginLeft="100dp"
                        android:textSize="18sp"
                        android:layout_marginTop="40dp"
                        android:textColor="#2291AC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambulance"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:layout_marginLeft="100dp"
                        android:textSize="16sp"
                        android:layout_marginTop="60dp"
                        android:textColor="#2291AC"/>

                    <ImageView
                        android:id="@+id/img108"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/telephone"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="25dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/helplinePrag"
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FEF3F7"
                android:outlineSpotShadowColor="#FEF3F7"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/pregnant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/bold"
                        android:text="102"
                        android:textColor="#EF5F91"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="60dp"
                        android:fontFamily="@font/bold"
                        android:text="Pregnancy Medic"
                        android:textColor="#EF5F91"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img102"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/telephone" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:id="@+id/helplineFire"
                android:layout_width="380dp"
                android:layout_height="110dp"
